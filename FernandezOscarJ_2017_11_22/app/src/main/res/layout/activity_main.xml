        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02">

        <RadioButton
            android:id="@+id/sexoMujer"
            android:checked="true"
            android:text="Mujer" />

        <RadioButton
            android:id="@+id/sexoHombre"
            android:checked="false"
            android:text="Hombre" />
    </RadioGroup>


