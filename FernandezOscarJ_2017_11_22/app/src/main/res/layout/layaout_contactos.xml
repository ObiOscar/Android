<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.oscar.fernandezoscarj_2017_11_22.MainActivity">

    <ImageView
        android:id="@+id/ImgFoto"
        android:layout_width="78dp"
        android:layout_height="70dp"
        android:src="@drawable/icon_female" />

    <LinearLayout
        android:id="@+id/list_item"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView android:id="@+id/itemNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginLeft="78dp" />

    <TextView android:id="@+id/itemApellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginLeft="78dp" />

    <TextView android:id="@+id/itemNumero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginLeft="78dp"
        android:layout_marginBottom="10dp"/>

</LinearLayout>
</android.support.constraint.ConstraintLayout>